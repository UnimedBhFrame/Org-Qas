<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidaNumerosVida</fullName>
    <active>true</active>
    <description>Insira um número válido.</description>
    <errorConditionFormula>OR(ISBLANK(NumeroVidas__c), NumeroVidas__c = 0)</errorConditionFormula>
    <errorDisplayField>NumeroVidas__c</errorDisplayField>
    <errorMessage>Insira um número válido.</errorMessage>
</ValidationRule>
